{% if particle.link %}
	{% set link_prefix	= "<a href='"~particle.link|raw~"'>" %}
	{% set link_suffix	= "</a>" %}
{% else %}
	{% set link_prefix	= "" %}
	{% set link_suffix	= "" %}
{% endif %}

{{ link_prefix|raw }}

{% if particle.image %}
<div class='image' style="background-image: url('{{ url(particle.image) }}')" ></div>
{% endif %}

{% if particle.headline %}
	<h3 class='headline bg-d1'>{{ particle.headline|raw }}</h3>
{% endif %}

<div class='content bg-l3'>

{% if particle.description %}
	<div class="description bg-l">{{ particle.description|raw }}</div>
{% endif %}

{% if particle.items|length >0 %}
	<ul class='items'>
		{% for item in particle.items %}
			<li class="item">
			{% if item.title %}
				<h4>{{ item.title|raw }}</h4>
			{% endif %}
			{% if item.text %}
				<div class='text'>{{ item.text|raw }}</div>
			{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endif %}

</div>

{{ link_suffix|raw }}
