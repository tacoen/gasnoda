<script>

	construct_SectionPallete2("#color-chart");
	construct_SectionPallete2(".gas-docu .pg");
	
	if ( gas('#color-chart').cssvar('color') ) {
		document.querySelector("#color-chart input[name='color']").value = gas('#color-chart').cssvar('color').replace(/\s?/ig,'');
	}
	if ( gas('#color-chart').cssvar('primary') ) {
		document.querySelector("#color-chart input[name='primary']").value = gas('#color-chart').cssvar('primary').replace(/\s?/ig,'');
	}
	if ( gas('#color-chart').cssvar('secondary') ) {
		document.querySelector("#color-chart input[name='secondary']").value = gas('#color-chart').cssvar('secondary').replace(/\s?/ig,'');
	}
	
	function cocok(what) {
		var i = document.querySelector("#color-chart input[name='"+what+"']");
		val = i.value
		if (val=='') {
			gas('#color-chart').cssvarRemove(what);
		} else {
			var val = document.querySelector("#color-chart input[name='"+what+"']").value;
			gas('#color-chart').cssvar(what,val)
			gas('.gdocu .pg').cssvar(what,val)
			gas('.gdocu .pg').addClass('hsl-pal');
		}

		construct_SectionPallete2("#color-chart");
		construct_SectionPallete2(".gdocu .pg");
		
		gas("textarea.color-code").content('--color:'+val+';')
	}

	function randomcolor() {
		var letters = '0123456789ABCDEF';
		var color = '#';
		for (var i = 0; i < 6; i++) {
			color += letters[Math.floor(Math.random() * 16)];
		}
		document.querySelector("#color-chart input[name='color']").value = color;
		cocok("color");
	}


document.querySelectorAll('#color-chart [class*=bgcolor-]').forEach(function(c) {
	var ori = c.innerHTML ;
	if (ori=='') { 
		c.innerHTML += c.getAttribute('class').replace('bgcolor-','')
	}
	
});

</script>